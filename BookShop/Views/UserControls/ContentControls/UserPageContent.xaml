<UserControl
    x:Class="BookShop.Views.UserControls.ContentControls.UserPageContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bh="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:common="clr-namespace:BookShop.ViewModels.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookShop.Views.UserControls.ContentControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Resources/AuthStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0,20">
        <TabControl BorderBrush="#E3E3E3">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource MenuTabItem}" TargetType="TabItem" />
            </TabControl.Resources>

            <TabItem Header="Профиль">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel
                        Width="280"
                        Margin="10,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Border
                            Width="110"
                            Height="110"
                            BorderThickness="0"
                            CornerRadius="50"
                            Cursor="Hand">
                            <Border.Style>
                                <Style>
                                    <Style.Triggers>
                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Width"
                                                            To="105"
                                                            Duration="0:0:0.250" />
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Height"
                                                            To="105"
                                                            Duration="0:0:0.250" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Width"
                                                            To="110"
                                                            Duration="0:0:0.150" />
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Height"
                                                            To="110"
                                                            Duration="0:0:0.150" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Path=ProfileFormModel.Image, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <Border.InputBindings>
                                <MouseBinding Command="{Binding ChangeImageCommand}" MouseAction="LeftClick" />
                            </Border.InputBindings>
                        </Border>
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="{Binding Path=ProfileFormModel.Name}" />

                        <StackPanel Margin="0,15,0,0">
                            <Label FontSize="13">
                                Логин
                            </Label>
                            <Border
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                Cursor="No">
                                <TextBlock
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource PlaceholderColor}"
                                    Text="{Binding ProfileFormModel.Login}" />
                            </Border>

                            <Label
                                Margin="0,10,0,0"
                                FontSize="13"
                                Target="{Binding ElementName=UserNameBox}">
                                Имя пользователя
                            </Label>
                            <TextBox
                                x:Name="UserNameBox"
                                Padding="5"
                                Panel.ZIndex="1"
                                Background="Transparent"
                                Style="{StaticResource ValidationException}"
                                Text="{Binding ProfileFormModel.Name, ValidatesOnExceptions=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="7,-24,0,0" Text="Введите имя">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Foreground" Value="{DynamicResource PlaceholderColor}" />
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=UserNameBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Label
                                Margin="0,10,0,0"
                                FontSize="13"
                                Target="{Binding ElementName=UserEmailBox}">
                                Почта
                            </Label>
                            <TextBox
                                x:Name="UserEmailBox"
                                Padding="5"
                                Panel.ZIndex="1"
                                Background="Transparent"
                                Style="{StaticResource ValidationException}"
                                Text="{Binding ProfileFormModel.Email, ValidatesOnExceptions=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="7,-24,0,0" Text="Введите почту">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Foreground" Value="{DynamicResource PlaceholderColor}" />
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=UserEmailBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Label
                                Margin="0,10,0,0"
                                FontSize="13"
                                Target="{Binding ElementName=UserPasswordBox}">
                                Пароль
                            </Label>
                            <PasswordBox x:Name="UserPasswordBox" Padding="5">
                                <bh:Interaction.Behaviors>
                                    <common:PasswordBehavior Password="{Binding Path=ProfileFormModel.Password, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, Mode=TwoWay}" />
                                </bh:Interaction.Behaviors>
                            </PasswordBox>
                            <Button
                                Height="40"
                                Margin="0,28,0,0"
                                Background="{DynamicResource MainContrastColor}"
                                Command="{Binding EditUserCommand}"
                                Cursor="Hand"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Style="{StaticResource DefaultButton}">
                                Изменить
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Заказы">
                <ListBox
                    x:Name="BasketItemsList"
                    Margin="0,20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    ItemsSource="{Binding Path=OrderItemsGroups, UpdateSourceTrigger=PropertyChanged}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    VirtualizingPanel.ScrollUnit="Pixel">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="25,0,25,25"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1">
                                <ListBox
                                    x:Name="BasketItemsList"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    ItemsSource="{Binding Path=OrderItems, UpdateSourceTrigger=PropertyChanged}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                    VirtualizingPanel.ScrollUnit="Pixel">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Padding="15"
                                                BorderBrush="{DynamicResource BorderColor}"
                                                BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                        <Border
                                                            Padding="7"
                                                            BorderBrush="{DynamicResource BorderColor}"
                                                            BorderThickness="1">
                                                            <Image
                                                                Width="70"
                                                                Height="90"
                                                                Cursor="Hand"
                                                                Source="{Binding Book.Photos[0].Source}"
                                                                Stretch="Fill">
                                                                <Image.InputBindings>
                                                                    <MouseBinding
                                                                        Command="{Binding DataContext.ShowBookPage, ElementName=BasketItemsList}"
                                                                        CommandParameter="{Binding Book}"
                                                                        MouseAction="LeftClick" />
                                                                </Image.InputBindings>
                                                            </Image>
                                                        </Border>

                                                        <StackPanel MaxWidth="350">
                                                            <TextBlock
                                                                Cursor="Hand"
                                                                FontSize="16"
                                                                FontWeight="Medium"
                                                                Text="{Binding Book.Title}">
                                                                <TextBlock.InputBindings>
                                                                    <MouseBinding
                                                                        Command="{Binding DataContext.ShowBookPage, ElementName=BasketItemsList}"
                                                                        CommandParameter="{Binding Book}"
                                                                        MouseAction="LeftClick" />
                                                                </TextBlock.InputBindings>
                                                            </TextBlock>
                                                            <TextBlock
                                                                Margin="0,5,0,0"
                                                                FontSize="14"
                                                                Foreground="#ABABAB"
                                                                Text="{Binding Book.Authors, Converter={StaticResource AuthorsConverter}}"
                                                                TextWrapping="WrapWithOverflow" />
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Margin="0,0,20,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                        <TextBlock
                                                            Margin="10,0,0,0"
                                                            FontSize="14"
                                                            Text="{Binding Count}" />
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Text="{Binding TotalСost, Converter={StaticResource MoneyConverter}}" />
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
